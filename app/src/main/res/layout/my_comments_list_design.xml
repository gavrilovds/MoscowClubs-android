<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/my_comments_item">
    <Space
        android:layout_width="15dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:background="@drawable/my_comments_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/club_name_text"
            android:text="ClubName"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/my_comment_text"
            android:textSize="15sp"
            android:text="Это мой комментарий об этом клубе"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="bottom|right"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_comment_button"
            android:background="@drawable/delete_grey"/>
    </LinearLayout>
</LinearLayout>